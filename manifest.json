{
  "manifest_version": 2,
  "name": "flonk-loader",
  "description": "Shows a loader when background requests are running",
  "version": "0.0.1",
  "background": {
    "scripts": ["script/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["style/ripple.css"],
      "js": ["script/content.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "webRequest",
    "http://*/",
    "https://*/"
  ]
}
